				line_len = ft_strlen(line);
							if (buffer_len + line_len >= BUFFER_SIZE)
							{
								ft_dprintf(2, "Error: Input exceeds buffer size.\n");
								break;
							}
							strncpy(&buffer[buffer_len], line, line_len);
							buffer_len += line_len;
							buffer[buffer_len++] = '\n';
							if(i == count)
								exit(0);
							continue;
							free(line);
